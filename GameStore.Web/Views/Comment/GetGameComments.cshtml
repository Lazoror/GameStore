@using GameStore.Web.ViewModels.Comment
@model GameStore.Web.ViewModels.Comment.DisplayCommentViewModel

@{
    ViewData["Title"] = "GetGameComments";
}
<head>
    <link href="~/lib/tingle/css/tingle.min.css" rel="stylesheet" />
</head>

<div class="comments">
    @foreach (var comments in Model.Comments)
    {
        @await Component.InvokeAsync("CommentRender", comments)

    }
</div>

<div class="add-comment-form">@await Html.PartialAsync("_AddComment", new CommentViewModel { GameKey = @Model.GameKey })</div>

<div class="tingle-demo">

</div>

<script src="/lib/tingle/js/tingle.min.js"></script>

<script src="~/js/Modal.js"></script>

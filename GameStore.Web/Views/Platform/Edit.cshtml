@model GameStore.Web.ViewModels.Platform.PlatformTypeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4 edit-platform-wrapper">
        <form asp-action="Edit">

            <div class="form-group">
                <label>@Resources.Type (@Resources.English)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@Resources.Type (@Resources.Russian)</label>
                <input asp-for="NameRu" class="form-control" />
                <span asp-validation-for="NameRu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="@nameof(Model.OldName)" value="@Model.OldName" />
                <input type="submit" value="@Resources.Edit" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="back-link">
    <a asp-action="Index">@Resources.BackToList</a>
</div>


@model GameStore.Web.ViewModels.Game.GameViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4 create-game-wrapper">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.Name (@Resources.English)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.Name (@Resources.Russian)</label>
                <input asp-for="NameRu" class="form-control" />
                <span asp-validation-for="NameRu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.Description (@Resources.English)</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.Name (@Resources.Russian)</label>
                <input asp-for="DescriptionRu" class="form-control" />
                <span asp-validation-for="DescriptionRu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock" class="control-label"></label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>

            <div class="select-genres">
                <select id="Platforms" multiple="multiple" name="@nameof(Model.GamePlatforms)" class="form-control">
                    @foreach (string platform in Model.GamePlatforms)
                    {
                        <option value="@platform">@platform</option>
                    }
                </select>
            </div>

            <div class="select-genres">
                <select id="Genres" multiple="multiple" name="@nameof(Model.GameGenres)" class="form-control">
                    @foreach (string genre in Model.GameGenres)
                    {
                        <option value="@genre">@genre</option>
                    }
                </select>
            </div>

            <div class="select-publisher">

                <select name="@nameof(Model.Publisher)" class="form-control">
                    <option value="">None</option>
                    @foreach (string publisher in Model.Publishers)
                    {
                        <option value="@publisher">@publisher</option>
                    }

                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="back-link">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GameStore.Web.ViewModels.Game.GameViewModel

@{
    decimal.TryParse(Model.Rating.ToString(), out decimal decimalStar);

    var starFilled = Int32.Parse(Math.Round(decimalStar).ToString());

}

<div class="game-stars">
    @for (int i = 0; i < starFilled; i++)
    {
        int count = i + 1;

        <div id="game-star" class="game-star" value="@count" gameKey="@Model.Key" style="background-image: url(../images/Star.svg)"></div>
    }

    @if (starFilled != 5)
    {
        @for (int i = starFilled + 1; i <= 5; i++)
        {
            <div id="game-star" class="game-star" value="@i" gameKey="@Model.Key"></div>
        }
    }


</div>